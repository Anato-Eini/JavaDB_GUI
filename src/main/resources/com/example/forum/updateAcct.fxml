<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.forum.UpdateAccountController">
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="15.0" layoutY="14.0" prefHeight="66.0" prefWidth="574.0" text="Update Account" textAlignment="CENTER">
        <font>
          <Font name="System Bold" size="31.0" />
        </font>
    </Label>
    <GridPane layoutX="5.0" layoutY="154.0" prefHeight="197.0" prefWidth="591.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="291.0" minWidth="10.0" prefWidth="270.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="334.0" minWidth="10.0" prefWidth="321.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="New Username:">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Label>
        <Label text="New Password:" GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Label>
        <TextField fx:id="newUsername" GridPane.columnIndex="1">
            <font>
                <Font size="35.0" />
            </font>
        </TextField>
        <TextField fx:id="newPassword" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
                <Font name="System Italic" size="35.0" />
            </font>
        </TextField>
    </GridPane>
    <Button fx:id="updateBtn" layoutX="456.0" layoutY="361.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="130.0" text="Update Account" />
    <Button fx:id="returnBtn" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="96.0" text="Return" />
    <Label fx:id="status" alignment="CENTER" layoutX="6.0" layoutY="91.0" prefHeight="17.0" prefWidth="591.0" textFill="RED">
        <font>
          <Font name="System Bold Italic" size="29.0" />
        </font>
    </Label>
</AnchorPane>
